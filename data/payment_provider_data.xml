    <odoo>
        <!-- bKash payment method -->
        <record id="payment_method_bkash" model="payment.method">
            <field name="name">bKash</field>
            <field name="code">bkash</field>
            <field name="active">True</field>
        </record>

        <!-- bKash payment provider -->
        <record id="payment_provider_bkash" model="payment.provider">
            <field name="name">bKash</field>
            <field name="code">bkash</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="state">enabled</field>
            <field name="is_published">True</field>
            <field name="payment_method_ids" eval="[(6, 0, [ref('payment_method_bkash')])]"/>
            <field name="redirect_form_view_id" ref="bkash.bkash_redirect_form"/>
    </record>
    </odoo>
